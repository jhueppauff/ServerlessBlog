<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
	<MudDrawerHeader>
		<MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">Blog Editor</MudText>
	</MudDrawerHeader>
	<MudNavMenu>
		<MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Home</MudNavLink>
		<MudNavLink Href="/images" Icon="@Icons.Filled.Storage">Images</MudNavLink>
		<MudNavGroup Title="Analytics" Icon="@Icons.Filled.DashboardCustomize" Expanded="true">
			<MudNavLink Href="/metrics" Icon="@Icons.Filled.Camera">Metrics</MudNavLink>
		</MudNavGroup>
	</MudNavMenu>
</MudDrawer>

@code {
	[Parameter]
	public bool SideBarOpen { get; set; }
}